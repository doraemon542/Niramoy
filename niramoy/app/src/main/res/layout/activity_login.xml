<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Purple Wavy Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/wave_background"
        android:layout_alignParentTop="true" />

    <!-- "Niramoy" Fancy Text -->
    <TextView
        android:id="@+id/tvNiramoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niramoy"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Sign into your account Text -->
    <TextView
        android:id="@+id/tvSignInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Sign into your Account"
        android:layout_below="@+id/tvNiramoy"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="#6a0dad" />

    <!-- Email ID Field -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/tvSignInText"
        android:layout_marginTop="40dp"
        android:backgroundTint="#6a0dad"
        android:padding="12dp" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="20dp"
        android:backgroundTint="#6a0dad"
        android:padding="12dp" />

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your Password?"
        android:textColor="#6a0dad"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="8dp" />

    <!-- Login Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6a0dad"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/tvForgotPassword"
        android:layout_marginTop="16dp" />

    <!-- Register Now -->
    <TextView
        android:id="@+id/tvRegisterNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? Register Now"
        android:textColor="#6a0dad"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="14sp" />
</RelativeLayout>