<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nurse.Nurse_homepage">



    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Sarah! You have 5 new requests."
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"

        android:layout_marginTop="70dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />








    <!-- Scrollable Area -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="540dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Horizontal Scrollable Section (Tips or Study Section) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Study Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic1"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Basic First Aid"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Study Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic2"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advanced CPR Techniques"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic3"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Handling Patient Trauma"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic4"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wound Care Basics"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic5"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Basic Pharmacology for Nurses"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic6"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mental Health First Aid"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>





                    <!-- Add more cards as needed -->
                </LinearLayout>
            </HorizontalScrollView>


            <!-- RecyclerView for Patient Requests -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                tools:listitem="@layout/item_request" />
        </LinearLayout>


    </ScrollView>


    <include
        android:id="@+id/menuBar"
        layout="@layout/menu_bar"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollArea" />



</androidx.constraintlayout.widget.ConstraintLayout>