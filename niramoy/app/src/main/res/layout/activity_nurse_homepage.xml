<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nurse.Nurse_homepage">



    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Sarah! You have 5 new requests."
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"

        android:layout_marginTop="70dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/bottomOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="8dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Request Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivRequest"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/request"
                android:contentDescription="Requests" />

            <TextView
                android:id="@+id/tvRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Study Material Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivStudyMaterial"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/blogger"
                android:contentDescription="Study Material" />

            <TextView
                android:id="@+id/tvStudyMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blogs"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- History Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHistory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/history"
                android:contentDescription="History" />

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- My Profile Option -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                android:contentDescription="My Profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>


    <!-- Scrollable Area -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintBottom_toTopOf="@id/bottomOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Horizontal Scrollable Section (Tips or Study Section) -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Study Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic1"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Basic First Aid"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Study Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic2"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Advanced CPR Techniques"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic3"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Handling Patient Trauma"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic4"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wound Care Basics"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic5"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Basic Pharmacology for Nurses"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Image -->
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:src="@drawable/pic6"
                                android:scaleType="centerCrop" />

                            <!-- Title -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mental Health First Aid"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:padding="8dp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>





                    <!-- Add more cards as needed -->
                </LinearLayout>
            </HorizontalScrollView>


            <!-- RecyclerView for Patient Requests -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                tools:listitem="@layout/item_request" />
        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>